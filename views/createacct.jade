				div
					img.logoimg(src="/img/ideadexlogo.png")
					form#createacct(action="/signup", method="post")
						div
							input.loginusername(type="text", name="username", placeholder="username")
						div
							input.loginpassword1(type="password", name="password", placeholder="password")
						div
							input.loginpassword2(type="password", name="password-verify" placeholder="password")
						p
						p
							input#togglePw(type="button" value="Show pw")
						span.status
						input.createacct(type="submit", value="Create Acct", class="btn btn-default")

		block content
